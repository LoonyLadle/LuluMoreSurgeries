<Defs>
  <ThingDef ParentName="ImplantBase">
    <defName>LuluMoreBionics_SubdermalArmor</defName>
    <label>subdermal armor</label>
    <description>Subcutaneous body armor consisting of small plates of flexible armor implanted under the skin. Provides modest but body-wide protection. A lattice-dust healing system allows it to recover from damage.</description>
    <graphicData>
      <texPath>Things/Item/Health/HealthItemBionic</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>0.80</drawSize>
    </graphicData>
    <thingSetMakerTags>
      <li>RewardSpecial</li>
    </thingSetMakerTags>
    <statBases>
      <MarketValue>2000</MarketValue>
      <Mass>8</Mass>
    </statBases>
    <techHediffsTags>
      <li>Advanced</li>
    </techHediffsTags>
  </ThingDef>

  <HediffDef ParentName="ImplantHediffBase">
    <defName>LuluMoreBionics_SubdermalArmor</defName>
    <label>subdermal armor</label>
    <labelNoun>subdermal armor</labelNoun>
    <stages>
      <li>
        <statOffsets>
          <ArmorRating_Sharp>0.60</ArmorRating_Sharp>
          <ArmorRating_Blunt>0.40</ArmorRating_Blunt>
          <ArmorRating_Heat>0.30</ArmorRating_Heat>
        </statOffsets>
      </li>
    </stages>
    <spawnThingOnRemoved>LuluMoreBionics_SubdermalArmor</spawnThingOnRemoved>
  </HediffDef>

  <RecipeDef ParentName="SurgeryFlesh">
    <defName>LuluMoreBionics_InstallSubdermalArmor</defName>
    <label>install subdermal armor</label>
    <description>Install subdermal armor.</description>
    <workerClass>Recipe_InstallImplant</workerClass>
    <jobString>Installing subdermal armor.</jobString>
    <workAmount>7400</workAmount>
    <deathOnFailedSurgeryChance>0.10</deathOnFailedSurgeryChance>
    <skillRequirements>
      <Medicine>8</Medicine>
    </skillRequirements>
    <ingredients>
      <li>
        <filter>
          <categories>
            <li>Medicine</li>
          </categories>
        </filter>
        <count>3</count>
      </li>
      <li>
        <filter>
          <thingDefs>
            <li>LuluMoreBionics_SubdermalArmor</li>
          </thingDefs>
        </filter>
        <count>1</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <categories>
        <li>Medicine</li>
      </categories>
      <thingDefs>
        <li>LuluMoreBionics_SubdermalArmor</li>
      </thingDefs>
    </fixedIngredientFilter>
    <appliedOnFixedBodyParts>
      <li>Torso</li>
    </appliedOnFixedBodyParts>
    <addsHediff>LuluMoreBionics_SubdermalArmor</addsHediff>
  </RecipeDef>

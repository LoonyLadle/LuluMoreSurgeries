<?xml version="1.0" encoding="utf-8" standalone="yes" ?>
<Defs>
  <ThingDef ParentName="ImplantBase">
    <defName>LuluMoreBionics_Allnighter</defName>
    <label>allnighter</label>
    <description>A brain implant that detects periods of inactivity and induces short periods of restful microsleep. While it does greatly reduce the need for sleep, the microsleep states can lead to confusion and unusual suggestability that make it more difficult to concentrate.</description>
    <graphicData>
      <texPath>Things/Item/Health/HealthItemBionic</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>0.80</drawSize>
    </graphicData>
    <thingSetMakerTags>
      <li>RewardSpecial</li>
    </thingSetMakerTags>
    <statBases>
      <MarketValue>800</MarketValue>
      <Mass>0.2</Mass>
    </statBases>
    <techHediffsTags>
      <li>Advanced</li>
    </techHediffsTags>
  </ThingDef>

  <HediffDef ParentName="ImplantHediffBase">
    <defName>LuluMoreBionics_Allnighter</defName>
    <label>allnighter</label>
    <labelNoun>allnighter</labelNoun>
    <stages>
      <li>
        <partEfficiencyOffset>-0.2</partEfficiencyOffset>
        <restFallFactor>0.2</restFallFactor>
      </li>
    </stages>
    <spawnThingOnRemoved>LuluMoreBionics_Allnighter</spawnThingOnRemoved>
  </HediffDef>

  <RecipeDef ParentName="SurgeryFlesh">
    <defName>LuluMoreBionics_InstallAllnighter</defName>
    <label>install allnighter</label>
    <description>Install an allnighter.</description>
    <workerClass>Recipe_InstallImplant</workerClass>
    <jobString>Installing allnighter.</jobString>
    <workAmount>3700</workAmount>
    <deathOnFailedSurgeryChance>0.10</deathOnFailedSurgeryChance>
    <skillRequirements>
      <Medicine>8</Medicine>
    </skillRequirements>
    <ingredients>
      <li>
        <filter>
          <categories>
            <li>Medicine</li>
          </categories>
        </filter>
        <count>3</count>
      </li>
      <li>
        <filter>
          <thingDefs>
            <li>LuluMoreBionics_Allnighter</li>
          </thingDefs>
        </filter>
        <count>1</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <categories>
        <li>Medicine</li>
      </categories>
      <thingDefs>
        <li>LuluMoreBionics_Allnighter</li>
      </thingDefs>
    </fixedIngredientFilter>
    <appliedOnFixedBodyParts>
      <li>Brain</li>
    </appliedOnFixedBodyParts>
    <addsHediff>LuluMoreBionics_Allnighter</addsHediff>
  </RecipeDef>
</Defs>
